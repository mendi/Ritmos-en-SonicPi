# Iteraciones

use_bpm 80

4.times do
  sample :drum_bass_hard
  sample :drum_cymbal_closed
  sleep 0.5
  sample :drum_snare_hard
  sample :drum_cymbal_closed
  sleep 0.5
  sample :drum_cymbal_closed
  sleep 0.25
  sample :drum_bass_hard
  sleep 0.25
  sample :drum_cymbal_closed
  sample :drum_snare_hard
  sleep 0.5
end


4.times do
  sample :drum_cymbal_closed
  sample :drum_bass_hard
  sleep 0.5
  sample :drum_cymbal_closed
  sleep 0.25
  sample :drum_snare_soft
  sleep 0.25
  sample :drum_cymbal_closed
  sample :drum_bass_hard
  sleep 0.5
  sample :drum_snare_soft
  sample :drum_cymbal_closed
  sleep 0.5
end

